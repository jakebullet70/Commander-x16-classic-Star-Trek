START:
	POKE $030C,4 : SYS $FF62 : REM --- CHANGE TO THIN PET UPPER/GRAPHICS
	GOSUB INIT_COLORS
	SCREEN $80
	CLS 
	
	locate 1,1:print "	AAAAAAAAA";

	GOSUB DETECT_IF_JOYSTICK


MMU_SHOW:
	IF MMU_INIT = 0 THEN GOSUB MMU_INIT_ITEMS : CM=1 : MMU_SELECTED_NDX=0 : MMU_INIT = 1
	GOSUB MMU_UPDATE_SCRN
	IF RET = 1 THEN LOCATE 1,28 : PRINT "M1" 
	IF RET = 2 THEN LOCATE 1,28 : PRINT "M2" 
	IF RET = 3 THEN LOCATE 1,28 : PRINT "QUIT" : END 
	GOTO MMU_SHOW
	

MMU_UPDATE_SCRN:
	REM ===== DISPLAY OPTIONS =====
	POKE 903,60  : REM --- CHANGES THE ROW SIZE SO THE LAST CHAR DOES NOT SCROLL THE SCREEN	
	
	COLOR CLR_TXT_NORMAL
	FOR N = 1 TO MENUS.TTL
		FOR M = 1 TO MENUS.SUB.ITEMS.TTL(N)
			LOCATE MNU.Y.LOCATION(N,M),MNU.X.LOCATION(N,M): PRINT MNU.TEXT$(N,M) ;
		NEXT M
	NEXT N
		
	SLEEP 10 : GOSUB KB_BUFFER_CLEAR
	IF MMU_SELECTED_NDX<>0 THEN GOTO LINE10145MNU
	MMU_SELECTED_NDX=1
	
LINE10130MNU:
	IF MMU_SELECTED_NDX <= MENUS.SUB.ITEMS.TTL(CM) THEN MMU_SELECTED_NDX=MMU_SELECTED_NDX+1:GOTO LINE10130MNU
	IF MMU_SELECTED_NDX > MENUS.SUB.ITEMS.TTL(CM) THEN MMU_SELECTED_NDX=1
	
LINE10145MNU:
	COLOR CLR_TXT_BRIGHT 
	LOCATE MNU.Y.LOCATION(CM,MMU_SELECTED_NDX),MNU.X.LOCATION(CM,MMU_SELECTED_NDX): 
	PRINT CHR$($12) + MNU.TEXT$(CM,MMU_SELECTED_NDX) : rem + PRINT "{RVS OFF}";
	POKE 903,30  : REM --- PUT IT BACK TO THE ORIGINAL

WAITKEY01MNU:
	GOSUB KB_JOY_KEYS_GET : SLEEP 6
	REM CHAR 0,6,CLR_TXT_NORM,CHR$($12) + KB.STR$
	REM LOCATE 1,6 : PRINT KB_STR$
	IF KB_STR$ = "F" THEN RET = MNU.RET.VAL(CM,MMU_SELECTED_NDX) : RETURN
	IF KB_STR$ = "L" THEN MMU_SELECTED_NDX=MMU_SELECTED_NDX-1 	: IF MMU_SELECTED_NDX=0 THEN MMU_SELECTED_NDX = MENUS.SUB.ITEMS.TTL(CM)
	IF KB_STR$ = "R" THEN MMU_SELECTED_NDX=MMU_SELECTED_NDX+1 	: IF MMU_SELECTED_NDX > MENUS.SUB.ITEMS.TTL(CM) THEN MMU_SELECTED_NDX=1
	rem IF KB_STR$ = "D" THEN MMU_SELECTED_NDX=0 		: CM=CM+1 : IF CM > MENUS.TTL THEN CM=1
	rem IF KB_STR$ = "U" THEN MMU_SELECTED_NDX=0 		: CM=CM-1 : IF CM = 0 THEN CM=MENUS.TTL
	GOTO MMU_UPDATE_SCRN

		
MMU_INIT_ITEMS:
	
	MENUS.TTL = 1: VMENUS_TTL=8
	DIM MNU.X.LOCATION(MENUS.TTL,VMENUS_TTL) : DIM MNU.Y.LOCATION(MENUS.TTL,VMENUS_TTL):
	DIM MNU.TEXT$(MENUS.TTL,VMENUS_TTL) ,MNU.RET.VAL(MENUS.TTL,VMENUS_TTL)
	
	REM --- SUB ITEMS TTL
	MENUS.SUB.ITEMS.TTL(1)=VMENUS_TTL
	
	REM : MENUS.SUB.ITEMS.TTL(2)=2 : MENUS.SUB.ITEMS.TTL(3)=2
	REM MENUS.SUB.ITEMS.TTL(4)=1   : MENUS.SUB.ITEMS.TTL(5)=1 
	
	REM NAVSRSLRSPHATORSHEDAMCOM
	
	MNU.X.LOCATION(1,1)= 1 : MNU.Y.LOCATION(1,1)= 30 : MNU.TEXT$(1,1)=" NAV "				:MNU.RET.VAL(1,1) = 1
	MNU.X.LOCATION(1,2)= 6 : MNU.Y.LOCATION(1,2)= 30 : MNU.TEXT$(1,2)=" SRS "				:MNU.RET.VAL(1,2) = 2
	MNU.X.LOCATION(1,3)=11 : MNU.Y.LOCATION(1,3)= 30 : MNU.TEXT$(1,3)=" LRS "				:MNU.RET.VAL(1,3) = 3
	MNU.X.LOCATION(1,4)=16 : MNU.Y.LOCATION(1,4)= 30 : MNU.TEXT$(1,4)=" PHA "				:MNU.RET.VAL(1,4) = 4
	MNU.X.LOCATION(1,5)=21 : MNU.Y.LOCATION(1,5)= 30 : MNU.TEXT$(1,5)=" TOR "				:MNU.RET.VAL(1,5) = 5
	MNU.X.LOCATION(1,6)=26 : MNU.Y.LOCATION(1,6)= 30 : MNU.TEXT$(1,6)=" SHE "				:MNU.RET.VAL(1,6) = 6
	MNU.X.LOCATION(1,7)=31 : MNU.Y.LOCATION(1,7)= 30 : MNU.TEXT$(1,7)=" DAM "				:MNU.RET.VAL(1,7) = 7
	MNU.X.LOCATION(1,8)=36 : MNU.Y.LOCATION(1,8)= 30 : MNU.TEXT$(1,8)=" MAP "				:MNU.RET.VAL(1,8) = 8
			
	REM MNU.X.LOCATION(2,1)=15 : MNU.Y.LOCATION(2,1)=12 : MNU.TEXT$(2,1)=" ON "					:MNU.RET.VAL(2,1) = RET.VAL.SOUND.ON
	REM MNU.X.LOCATION(2,2)=20 : MNU.Y.LOCATION(2,2)=12 : MNU.TEXT$(2,2)=" OFF "				:MNU.RET.VAL(2,2) = RET.VAL.SOUND.OFF
	REM MNU.DEFAULT(2,OPTIONS.SOUND)=1
	RETURN



	
